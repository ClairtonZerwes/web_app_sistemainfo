<!DOCTYPE html>
<html lang="pt-br" ng-app="CadastroApp">
<head>
    <meta charset="UTF-8">
    <title>Cadastro de Usuário</title>
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/app.js"></script>
</head>
<body ng-controller="UsuarioController">
    <h2>Cadastro de Usuário</h2>

    <label>Nome:</label>
    <input type="text" ng-model="usuario.nome" required>

    <label>CPF:</label>
    <input type="text" ng-model="usuario.cpf" required>

    <label>Endereço:</label>
    <input type="text" ng-model="usuario.endereco">

    <label>Telefone:</label>
    <input type="text" ng-model="usuario.telefone">

    <button ng-click="salvarUsuario()">Salvar</button>

    <p>{{ mensagem }}</p>
</body>
</html>

